<% content_for :title, "Classrooms" %>

<div class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="mb-6 px-6 py-4 bg-green-50 border-2 border-green-200 text-green-800 rounded-[20px] animate-fade-in flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="font-medium"><%= notice %></span>
    </div>
  <% end %>

  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4 mb-10">
    <div>
      <h1 class="text-4xl md:text-5xl font-medium mb-2" style="font-family: 'Expensify New Kansas', system-ui, sans-serif;">
        Your Classrooms
      </h1>
      <p class="text-neutral-600" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
        Explore and manage your learning spaces
      </p>
    </div>
    <% if current_user_can_manage? %>
      <%= link_to new_classroom_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white rounded-full border-[1.5px] border-primary-500 transition-all duration-200 hover:shadow-lg hover:scale-105 font-semibold" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Classroom
      <% end %>
    <% end %>
  </div>

  <% cache ["classrooms", "index", @classrooms.maximum(:updated_at), Current.user&.id] do %>
  <div id="classrooms">
    <% if @classrooms.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @classrooms.each do |classroom| %>
          <% cache ["classroom", "card", classroom, Current.user&.id] do %>
            <div class="bg-white rounded-[24px] border-2 border-neutral-200 overflow-hidden hover:border-primary-400 hover:shadow-xl transition-all duration-300 hover:-translate-y-1 relative group animate-fade-in">
              <%= link_to classroom_path(classroom), class: "block" do %>
                <% if classroom.header_image.attached? %>
                  <div class="w-full h-48 overflow-hidden bg-gradient-to-br from-accent-50 to-accent-100">
                    <% if classroom.header_image.content_type.start_with?('image/svg') %>
                      <%= image_tag classroom.header_image, 
                          class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                    <% else %>
                      <%= image_tag classroom.header_image.variant(resize_to_fill: [600, 300]), 
                          class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="w-full h-48 bg-gradient-to-br from-primary-400 via-primary-500 to-primary-600 relative overflow-hidden">
                    <div class="absolute inset-0 opacity-20">
                      <div class="absolute top-0 left-0 w-32 h-32 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"></div>
                      <div class="absolute bottom-0 right-0 w-40 h-40 bg-white rounded-full translate-x-1/3 translate-y-1/3"></div>
                    </div>
                  </div>
                <% end %>
              <% end %>
              
              <% if current_user_can_manage? %>
                <div class="absolute top-4 right-4 z-10" data-controller="dropdown" data-dropdown-open-class="block" data-dropdown-close-class="hidden" onclick="event.stopPropagation();">
                <button type="button" 
                        class="p-2.5 rounded-full bg-white/95 backdrop-blur-md text-neutral-700 hover:bg-white hover:text-primary-600 transition-all duration-200 shadow-md hover:shadow-lg hover:scale-110"
                        data-action="click->dropdown#toggle"
                        onclick="event.preventDefault(); event.stopPropagation();"
                        aria-label="Options">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <circle cx="12" cy="6" r="2"/>
                    <circle cx="12" cy="12" r="2"/>
                    <circle cx="12" cy="18" r="2"/>
                  </svg>
                </button>
                
                <div class="hidden absolute right-0 mt-2 w-56 bg-white rounded-[20px] shadow-xl border-2 border-neutral-200 py-2 z-20 overflow-hidden"
                     data-dropdown-target="menu"
                     onclick="event.stopPropagation();">
                  <%= link_to edit_classroom_path(classroom), 
                      class: "flex items-center gap-3 px-5 py-3 text-sm text-neutral-700 hover:bg-accent-50 transition-all duration-150 font-medium" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-neutral-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    Edit Classroom
                  <% end %>
                  <div class="h-px bg-neutral-200 my-1"></div>
                  <button type="button"
                          onclick="event.preventDefault(); event.stopPropagation(); openDeleteModal('classroom-index-<%= classroom.id %>')"
                          class="flex items-center gap-3 w-full text-left px-5 py-3 text-sm text-red-600 hover:bg-red-50 transition-all duration-150 font-medium">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                    Delete Classroom
                  </button>
                </div>
              </div>
              <% end %>

              
              <%= link_to classroom_path(classroom), class: "block p-6" do %>
                <h2 class="text-2xl font-medium mb-3 text-neutral-900 group-hover:text-primary-600 transition-colors duration-200 line-clamp-2" style="font-family: 'Expensify New Kansas', system-ui, sans-serif;">
                  <%= classroom.name %>
                </h2>
                <p class="text-base text-neutral-600 line-clamp-3 mb-4" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                  <%= classroom.description.present? ? classroom.description : "No description available" %>
                </p>
                
                <div class="mt-6 pt-4 border-t border-neutral-200 flex items-center justify-between">
                  <div class="flex items-center gap-2 text-sm text-neutral-500" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span><%= time_ago_in_words(classroom.created_at) %> ago</span>
                  </div>
                  <div class="flex items-center justify-center w-8 h-8 rounded-full bg-accent-100 group-hover:bg-primary-500 transition-all duration-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-neutral-600 group-hover:text-white transition-colors duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-accent-50 rounded-[30px] border-2 border-neutral-200 text-center py-16 px-8 animate-fade-in">
        <div class="max-w-md mx-auto">
          <div class="w-20 h-20 mx-auto mb-6 bg-white rounded-full flex items-center justify-center shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          
          <h3 class="text-2xl font-medium text-neutral-900 mb-3" style="font-family: 'Expensify New Kansas', system-ui, sans-serif;">
            No classrooms yet
          </h3>
          <p class="text-base text-neutral-600 mb-8" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
            Start your learning journey by creating your first classroom
          </p>
          
          <% if current_user_can_manage? %>
            <%= link_to new_classroom_path, class: "inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white rounded-full border-[1.5px] border-primary-500 transition-all duration-200 hover:shadow-lg hover:scale-105 font-semibold" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Create Your First Classroom
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <% end %>
</div>

<!-- Delete Confirmation Modals -->
<% @classrooms.each do |classroom| %>
  <div id="delete-modal-classroom-index-<%= classroom.id %>" 
       class="hidden fixed inset-0 z-50 overflow-y-auto"
       data-controller="modal" 
       data-action="keydown@window->modal#closeWithKeyboard">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
      <!-- Background overlay -->
      <div class="fixed inset-0 transition-opacity bg-neutral-900/50 backdrop-blur-sm" 
           onclick="closeDeleteModal('classroom-index-<%= classroom.id %>')"
           aria-hidden="true"></div>

      <!-- Modal content -->
      <div class="relative inline-block w-full max-w-md p-6 my-8 text-left align-middle transition-all transform bg-white rounded-[30px] border-2 border-black shadow-2xl animate-fade-in">
        <div class="mb-4">
          <h3 class="text-2xl font-bold text-neutral-900 mb-2" style="font-family: 'Expensify New Kansas', serif;">
            Delete Classroom
          </h3>
          <p class="text-base text-neutral-600" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
            This action cannot be undone. This will permanently delete "<%= classroom.name %>" and all its announcements.
          </p>
        </div>

        <%= form_with url: classroom_path(classroom), method: :delete, data: { controller: "confirmation", confirmation_confirm_text_value: "DELETE", turbo: false } do |form| %>
          <div class="mb-4">
            <label for="delete-input-classroom-index-<%= classroom.id %>" class="block text-sm font-semibold text-neutral-700 mb-2" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
              Type <span class="inline rounded-md border border-black/10 bg-accent-50 px-2 py-1 font-mono text-sm text-neutral-800">DELETE</span> to confirm:
            </label>
            <div class="bg-white rounded-full border-[1.5px] border-black px-6 py-4 flex items-center focus-within:border-red-500 transition-colors">
              <input type="text"
                     id="delete-input-classroom-index-<%= classroom.id %>"
                     data-confirmation-target="input"
                     class="flex-1 bg-transparent outline-none text-base"
                     style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;"
                     autocomplete="off"
                     placeholder="Type DELETE to confirm">
            </div>
          </div>

          <div class="mb-6 px-4 py-3 bg-red-50 border-2 border-red-200 rounded-[20px]">
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <div>
                <p class="text-sm text-red-800 font-semibold mb-1" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                  Warning: This action cannot be undone
                </p>
                <p class="text-sm text-red-700" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                  All announcements and data will be permanently deleted.
                </p>
              </div>
            </div>
          </div>

          <div class="flex gap-3">
            <button type="button"
                    onclick="closeDeleteModal('classroom-index-<%= classroom.id %>')"
                    class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent hover:bg-neutral-100 rounded-full border-[1.5px] border-neutral-300 transition-all duration-200 text-neutral-700 font-semibold">
              Cancel
            </button>
            <button type="button"
                    data-confirmation-target="confirmButton"
                    data-action="click->confirmation#confirm"
                    disabled
                    class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-full border-[1.5px] border-red-600 transition-all duration-200 hover:shadow-lg font-semibold cursor-pointer opacity-50">
              Delete Classroom
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<script>
  function openDeleteModal(id) {
    const modal = document.getElementById('delete-modal-' + id);
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      // Focus on input field
      setTimeout(() => {
        const input = modal.querySelector('[data-confirmation-target="input"]');
        if (input) input.focus();
      }, 100);
    }
  }

  function closeDeleteModal(id) {
    const modal = document.getElementById('delete-modal-' + id);
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
      // Reset input
      const input = modal.querySelector('[data-confirmation-target="input"]');
      if (input) input.value = '';
    }
  }

  // Close modal on Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const modals = document.querySelectorAll('[id^="delete-modal-"]');
      modals.forEach(modal => {
        if (!modal.classList.contains('hidden')) {
          const id = modal.id.replace('delete-modal-', '');
          closeDeleteModal(id);
        }
      });
    }
  });
</script>
