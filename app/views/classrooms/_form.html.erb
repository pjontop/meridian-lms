<%= form_with(model: classroom, class: "contents") do |form| %>
  <% if classroom.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

      <ul class="list-disc ml-6">
        <% classroom.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "block font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "block shadow-sm rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500 px-3 py-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "block font-medium text-gray-700 mb-2" %>
    <%= form.textarea :description, rows: 4, class: "block shadow-sm rounded-md border border-gray-300 focus:border-blue-500 focus:ring-blue-500 px-3 py-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :header_image, "Header Image", class: "block font-medium text-gray-700 mb-2" %>
    <% if classroom.header_image.attached? %>
      <div class="mb-3">
        <%= image_tag classroom.header_image.variant(resize_to_limit: [800, 400]), class: "rounded-lg border border-gray-300 max-w-full h-auto" %>
      </div>
    <% end %>
    <%= form.file_field :header_image, accept: "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
    <p class="mt-1 text-sm text-gray-500">PNG, JPG, GIF up to 10MB</p>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
