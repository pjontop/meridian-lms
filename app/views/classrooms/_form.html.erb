<%= form_with(model: classroom, class: "space-y-6") do |form| %>
  <% if classroom.errors.any? %>
    <div class="px-6 py-4 bg-red-50 border-2 border-red-200 text-red-800 rounded-[20px] animate-fade-in">
      <div class="flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <strong class="font-semibold"><%= pluralize(classroom.errors.count, "error") %> prohibited this classroom from being saved:</strong>
          <ul class="list-disc ml-6 mt-2 space-y-1">
            <% classroom.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-semibold text-neutral-700 mb-2", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;" %>
    <div class="bg-white rounded-full border-[1.5px] border-black px-6 py-4 flex items-center focus-within:border-primary-500 transition-colors">
      <%= form.text_field :name, class: "flex-1 bg-transparent outline-none text-base", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;", placeholder: "e.g. Introduction to Computer Science" %>
    </div>
  </div>

  <div>
    <%= form.label :description, class: "block text-sm font-semibold text-neutral-700 mb-2", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;" %>
    <%= form.text_area :description, rows: 4, class: "block w-full rounded-[20px] border-[1.5px] border-black px-6 py-4 focus:border-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-offset-0 transition-colors", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;", placeholder: "Describe what students will learn in this classroom..." %>
  </div>

  <div>
    <%= form.label :header_image, "Header Image", class: "block text-sm font-semibold text-neutral-700 mb-2", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;" %>
    <% if classroom.header_image.attached? %>
      <div class="mb-4">
        <% if classroom.header_image.content_type.start_with?('image/svg') %>
          <%= image_tag classroom.header_image, class: "rounded-[20px] border-2 border-neutral-200 max-w-full h-auto" %>
        <% else %>
          <%= image_tag classroom.header_image.variant(resize_to_limit: [800, 400]), class: "rounded-[20px] border-2 border-neutral-200 max-w-full h-auto" %>
        <% end %>
      </div>
    <% end %>
    <%= form.file_field :header_image, accept: "image/*", class: "block w-full text-sm text-neutral-700 file:mr-4 file:py-3 file:px-6 file:rounded-full file:border-0 file:font-semibold file:bg-accent-50 file:text-black hover:file:bg-accent-100 file:cursor-pointer file:transition-colors" %>
    <p class="mt-2 text-sm text-neutral-500" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
      PNG, JPG, GIF up to 10MB
    </p>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white rounded-full border-[1.5px] border-primary-500 transition-all duration-200 hover:shadow-lg hover:scale-105 font-semibold cursor-pointer" %>
    <%= link_to "Cancel", classrooms_path, class: "inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent hover:bg-neutral-100 rounded-full border border-transparent transition-all duration-200 text-neutral-700 font-semibold" %>
  </div>
<% end %>
