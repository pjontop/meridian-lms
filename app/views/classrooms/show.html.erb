<% content_for :title, @classroom.name %>

<% cache ["classroom", "show", @classroom, @announcements.maximum(:updated_at), Current.user&.id] do %>
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <% if notice.present? %>
    <div class="mb-6 px-6 py-4 bg-green-50 border-2 border-green-200 text-green-800 rounded-[20px] animate-fade-in flex items-center gap-3">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <span class="font-medium"><%= notice %></span>
    </div>
  <% end %>

  <% cache ["classroom", "header", @classroom, Current.user&.id] do %>
    <div class="bg-white rounded-[30px] border-2 border-neutral-200 overflow-hidden mb-8 animate-fade-in">
      <% if @classroom.header_image.attached? %>
        <div class="w-full h-80 overflow-hidden bg-gradient-to-br from-accent-50 to-accent-100">
          <% if @classroom.header_image.content_type.start_with?('image/svg') %>
            <%= image_tag @classroom.header_image, 
                class: "w-full h-full object-cover" %>
          <% else %>
            <%= image_tag @classroom.header_image.variant(resize_to_fill: [1200, 400]), 
                class: "w-full h-full object-cover" %>
          <% end %>
        </div>
      <% else %>
        <div class="w-full h-80 bg-gradient-to-br from-primary-400 via-primary-500 to-primary-600 relative overflow-hidden">
          <div class="absolute inset-0 opacity-20">
            <div class="absolute top-0 left-0 w-64 h-64 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"></div>
            <div class="absolute bottom-0 right-0 w-80 h-80 bg-white rounded-full translate-x-1/3 translate-y-1/3"></div>
          </div>
        </div>
      <% end %>
      <div class="p-8 md:p-12">
        <h1 class="text-4xl md:text-5xl font-medium mb-4" style="font-family: 'Expensify New Kansas', system-ui, sans-serif;">
          <%= @classroom.name %>
        </h1>
        <p class="text-lg text-neutral-600" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
          <%= @classroom.description %>
        </p>
      </div>
    </div>
  <% end %>

  <% cache ["classroom", "announcements_section", @classroom, @announcements.maximum(:updated_at), Current.user&.id] do %>
  <div class="bg-white rounded-[30px] border-2 border-neutral-200 p-8 md:p-12 mb-8">
    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4 mb-8">
      <h2 class="text-3xl md:text-4xl font-medium" style="font-family: 'Expensify New Kansas', system-ui, sans-serif;">
        Announcements
      </h2>
      <% if current_user_can_manage? %>
        <%= link_to new_classroom_announcement_path(classroom_id: @classroom.id),
          class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white rounded-full border-[1.5px] border-primary-500 transition-all duration-200 hover:shadow-lg hover:scale-105 font-semibold",
          title: "New Announcement" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          <span>New Announcement</span>
        <% end %>
      <% end %>
    </div>

    <% if @announcements.any? %>
      <div class="space-y-4">
        <% @announcements.each do |announcement| %>
          <% cache ["announcement", "card", announcement, Current.user&.id] do %>
            <div class="bg-accent-50 rounded-[20px] border-2 border-neutral-200 p-6 hover:border-primary-300 hover:shadow-md transition-all duration-200 animate-fade-in">
            <div class="flex items-start justify-between gap-4">
              <div class="flex-1">
                <h3 class="text-xl font-medium mb-3 text-neutral-900" style="font-family: 'Expensify New Kansas', system-ui, sans-serif;">
                  <%= announcement.title %>
                </h3>
                <div class="prose prose-sm max-w-none text-base text-neutral-700 mb-4" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                  <%= announcement.content %>
                </div>
                <div class="flex items-center gap-2 text-sm text-neutral-500" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <%= announcement.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </div>
              </div>
              <% if current_user_can_manage? %>
                <button type="button"
                        onclick="openDeleteModal('<%= dom_id(announcement) %>')"
                        class="flex-shrink-0 p-2 text-red-600 hover:bg-red-50 rounded-full transition-all duration-200 hover:scale-110">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>

                <!-- Delete Confirmation Modal -->
                <div id="delete-modal-<%= dom_id(announcement) %>" 
                     class="hidden fixed inset-0 z-50 overflow-y-auto"
                     data-controller="modal" 
                     data-action="keydown@window->modal#closeWithKeyboard">
                  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
                    <!-- Background overlay -->
                    <div class="fixed inset-0 transition-opacity bg-neutral-900/50 backdrop-blur-sm" 
                         onclick="closeDeleteModal('<%= dom_id(announcement) %>')"
                         aria-hidden="true"></div>

                    <!-- Modal content -->
                    <div class="relative inline-block w-full max-w-md p-6 my-8 text-left align-middle transition-all transform bg-white rounded-[30px] border-2 border-black shadow-2xl animate-fade-in">
                      <div class="mb-4">
                        <h3 class="text-2xl font-bold text-neutral-900 mb-2" style="font-family: 'Expensify New Kansas', serif;">
                          Delete Announcement
                        </h3>
                        <p class="text-base text-neutral-600" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                          This action cannot be undone. This will permanently delete the announcement "<%= announcement.title %>".
                        </p>
                      </div>

                      <%= form_with url: announcement_path(announcement), method: :delete, data: { controller: "confirmation", confirmation_confirm_text_value: "DELETE", turbo: false } do |form| %>
                        <div class="mb-4">
                          <label for="delete-input-<%= dom_id(announcement) %>" class="block text-sm font-semibold text-neutral-700 mb-2" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                            Type <span class="inline rounded-md border border-black/10 bg-accent-50 px-2 py-1 font-mono text-sm text-neutral-800">DELETE</span> to confirm:
                          </label>
                          <div class="bg-white rounded-full border-[1.5px] border-black px-6 py-4 flex items-center focus-within:border-red-500 transition-colors">
                            <input type="text"
                                   id="delete-input-<%= dom_id(announcement) %>"
                                   data-confirmation-target="input"
                                   class="flex-1 bg-transparent outline-none text-base"
                                   style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;"
                                   autocomplete="off"
                                   placeholder="Type DELETE to confirm">
                          </div>
                        </div>

                        <div class="mb-6 px-4 py-3 bg-amber-50 border-2 border-amber-200 rounded-[20px]">
                          <div class="flex items-start gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-amber-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <p class="text-sm text-amber-800 font-medium" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                              This action cannot be undone.
                            </p>
                          </div>
                        </div>

                        <div class="flex gap-3">
                          <button type="button"
                                  onclick="closeDeleteModal('<%= dom_id(announcement) %>')"
                                  class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent hover:bg-neutral-100 rounded-full border-[1.5px] border-neutral-300 transition-all duration-200 text-neutral-700 font-semibold">
                            Cancel
                          </button>
                          <button type="button"
                                  data-confirmation-target="confirmButton"
                                  data-action="click->confirmation#confirm"
                                  disabled
                                  class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-full border-[1.5px] border-red-600 transition-all duration-200 hover:shadow-lg font-semibold cursor-pointer opacity-50">
                            Delete
                          </button>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="w-20 h-20 mx-auto mb-6 bg-accent-100 rounded-full flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
          </svg>
        </div>
        <p class="text-lg text-neutral-500 mb-2" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
          No announcements yet
        </p>
        <p class="text-sm text-neutral-400" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
          Share updates and important information with your class
        </p>
      </div>
    <% end %>
  </div>
  <% end %>

  <% cache ["classroom", "actions", @classroom, Current.user&.id] do %>
  <div class="flex flex-wrap gap-3">
    <% if current_user_can_manage? %>
      <%= link_to edit_classroom_path(@classroom), class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-accent-50 hover:bg-accent-100 rounded-full border-[1.5px] border-black transition-all duration-200 font-semibold" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Classroom
      <% end %>
    <% end %>
    <%= link_to classrooms_path, class: "inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent hover:bg-neutral-100 rounded-full border border-transparent transition-all duration-200 text-neutral-700 font-semibold" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
      </svg>
      Back to Classrooms
    <% end %>
    <% if current_user_can_manage? %>
      <button type="button"
              onclick="openDeleteModal('classroom-<%= @classroom.id %>')"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 text-white bg-red-600 hover:bg-red-700 rounded-full border-[1.5px] border-red-600 transition-all duration-200 hover:shadow-lg font-semibold cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete Classroom
      </button>
    <% end %>
  </div>
  <% end %>
</div>
<% end %>

<!-- Delete Classroom Confirmation Modal -->
<% if current_user_can_manage? %>
      <div id="delete-modal-classroom-<%= @classroom.id %>" 
           class="hidden fixed inset-0 z-50 overflow-y-auto"
           data-controller="modal" 
           data-action="keydown@window->modal#closeWithKeyboard">
        <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
          <!-- Background overlay -->
          <div class="fixed inset-0 transition-opacity bg-neutral-900/50 backdrop-blur-sm" 
               onclick="closeDeleteModal('classroom-<%= @classroom.id %>')"
               aria-hidden="true"></div>

          <!-- Modal content -->
          <div class="relative inline-block w-full max-w-md p-6 my-8 text-left align-middle transition-all transform bg-white rounded-[30px] border-2 border-black shadow-2xl animate-fade-in">
            <div class="mb-4">
              <h3 class="text-2xl font-bold text-neutral-900 mb-2" style="font-family: 'Expensify New Kansas', serif;">
                Delete Classroom
              </h3>
              <p class="text-base text-neutral-600" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                This action cannot be undone. This will permanently delete "<%= @classroom.name %>" and all its announcements.
              </p>
            </div>

            <%= form_with url: classroom_path(@classroom), method: :delete, data: { controller: "confirmation", confirmation_confirm_text_value: "DELETE", turbo: false } do |form| %>
              <div class="mb-4">
                <label for="delete-input-classroom" class="block text-sm font-semibold text-neutral-700 mb-2" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                  Type <span class="inline rounded-md border border-black/10 bg-accent-50 px-2 py-1 font-mono text-sm text-neutral-800">DELETE</span> to confirm:
                </label>
                <div class="bg-white rounded-full border-[1.5px] border-black px-6 py-4 flex items-center focus-within:border-red-500 transition-colors">
                  <input type="text"
                         id="delete-input-classroom"
                         data-confirmation-target="input"
                         class="flex-1 bg-transparent outline-none text-base"
                         style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;"
                         autocomplete="off"
                         placeholder="Type DELETE to confirm">
                </div>
              </div>

              <div class="mb-6 px-4 py-3 bg-red-50 border-2 border-red-200 rounded-[20px]">
                <div class="flex items-start gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-red-600 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                  </svg>
                  <div>
                    <p class="text-sm text-red-800 font-semibold mb-1" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                      Warning: This action cannot be undone
                    </p>
                    <p class="text-sm text-red-700" style="font-family: 'TT Commons Pro Variable', system-ui, sans-serif;">
                      All announcements and data will be permanently deleted.
                    </p>
                  </div>
                </div>
              </div>

              <div class="flex gap-3">
                <button type="button"
                        onclick="closeDeleteModal('classroom-<%= @classroom.id %>')"
                        class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent hover:bg-neutral-100 rounded-full border-[1.5px] border-neutral-300 transition-all duration-200 text-neutral-700 font-semibold">
                  Cancel
                </button>
                <button type="button"
                        data-confirmation-target="confirmButton"
                        data-action="click->confirmation#confirm"
                        disabled
                        class="flex-1 inline-flex items-center justify-center gap-2 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-full border-[1.5px] border-red-600 transition-all duration-200 hover:shadow-lg font-semibold cursor-pointer opacity-50">
                  Delete Classroom
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
<% end %>

<script>
  function openDeleteModal(id) {
    const modal = document.getElementById('delete-modal-' + id);
    if (modal) {
      modal.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
      // Focus on input field
      setTimeout(() => {
        const input = modal.querySelector('[data-confirmation-target="input"]');
        if (input) input.focus();
      }, 100);
    }
  }

  function closeDeleteModal(id) {
    const modal = document.getElementById('delete-modal-' + id);
    if (modal) {
      modal.classList.add('hidden');
      document.body.style.overflow = '';
      // Reset input
      const input = modal.querySelector('[data-confirmation-target="input"]');
      if (input) input.value = '';
    }
  }

  // Close modal on Escape key
  document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
      const modals = document.querySelectorAll('[id^="delete-modal-"]');
      modals.forEach(modal => {
        if (!modal.classList.contains('hidden')) {
          const id = modal.id.replace('delete-modal-', '');
          closeDeleteModal(id);
        }
      });
    }
  });
</script>
