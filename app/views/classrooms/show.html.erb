<% content_for :title, @classroom.name %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <h1 class="font-bold text-4xl text-gray-900 mb-2"><%= @classroom.name %></h1>
    <p class="text-gray-600 text-lg"><%= @classroom.description %></p>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
    <div class="flex items-center justify-between mb-6">
      <h2 class="font-bold text-2xl text-gray-900">Announcements</h2>
      <%= link_to new_classroom_announcement_path(classroom_id: @classroom.id),
        class: "rounded-md p-2 bg-blue-600 hover:bg-blue-500 text-white inline-flex items-center justify-center transition-colors",
        title: "New Announcement" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      <% end %>
    </div>

    <% if @announcements.any? %>
      <div class="space-y-4">
        <% @announcements.each do |announcement| %>
          <div class="bg-gray-50 border border-gray-200 rounded-lg p-5 hover:shadow-md transition-shadow">
            <div class="flex items-start justify-between">
              <div class="flex-1">
                <h3 class="font-semibold text-xl text-gray-900 mb-2"><%= announcement.title %></h3>
                <p class="text-gray-700 mb-3 whitespace-pre-wrap"><%= announcement.content %></p>
                <p class="text-sm text-gray-500">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <%= announcement.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
              <%= button_to announcement_path(announcement), 
                method: :delete, 
                data: { turbo_confirm: "Are you sure you want to delete this announcement?" }, 
                class: "ml-4 text-red-600 hover:text-red-800 font-medium transition-colors",
                form: { class: "inline" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                </svg>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-8">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
        </svg>
        <p class="text-gray-500 text-lg">No announcements yet</p>
        <p class="text-gray-400 text-sm mt-1">Click the + button above to create one</p>
      </div>
    <% end %>
  </div>

  <div class="flex flex-wrap gap-2">
    <%= link_to "Edit Classroom", edit_classroom_path(@classroom), class: "rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition-colors" %>
    <%= link_to "Back to Classrooms", classrooms_path, class: "rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium transition-colors" %>
    <%= button_to "Delete Classroom", @classroom, 
      method: :delete, 
      class: "rounded-md px-4 py-2.5 text-white bg-red-600 hover:bg-red-700 font-medium transition-colors cursor-pointer", 
      data: { turbo_confirm: "Are you sure you want to delete this classroom and all its announcements?" } %>
  </div>
</div>
