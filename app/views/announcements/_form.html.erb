<%= form_with(model: [@classroom, announcement], class: "space-y-6") do |form| %>
  <% if announcement.errors.any? %>
    <div class="px-6 py-4 bg-red-50 border-2 border-red-200 text-red-800 rounded-[20px] animate-fade-in">
      <div class="flex items-start gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <strong class="font-semibold"><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</strong>
          <ul class="list-disc ml-6 mt-2 space-y-1">
            <% announcement.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-semibold text-neutral-700 mb-2", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;" %>
    <div class="bg-white rounded-full border-[1.5px] border-black px-6 py-4 flex items-center focus-within:border-primary-500 transition-colors">
      <%= form.text_field :title, class: "flex-1 bg-transparent outline-none text-base", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;", placeholder: "e.g. Important: Assignment Due Date Change" %>
    </div>
  </div>

  <div>
    <%= form.label :content, class: "block text-sm font-semibold text-neutral-700 mb-2", style: "font-family: 'TT Commons Pro Variable', system-ui, sans-serif;" %>
    <%= form.rich_text_area :content, class: "mt-2 block w-full rounded-[20px] border-[1.5px] border-black focus:border-primary-500 focus:ring-2 focus:ring-primary-500 focus:ring-offset-0" %>
  </div>

  <div class="flex gap-3 pt-4">
    <%= form.submit class: "inline-flex items-center justify-center gap-2 px-8 py-4 bg-primary-500 hover:bg-primary-600 text-white rounded-full border-[1.5px] border-primary-500 transition-all duration-200 hover:shadow-lg hover:scale-105 font-semibold cursor-pointer" %>
    <%= link_to "Cancel", classroom_path(@classroom), class: "inline-flex items-center justify-center gap-2 px-8 py-4 bg-transparent hover:bg-neutral-100 rounded-full border border-transparent transition-all duration-200 text-neutral-700 font-semibold" %>
  </div>
<% end %>
